generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [uuid_ossp(map: "uuid-ossp", schema: "extensions"), vector]
}

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  feedback        Feedback[]
  inputs          Input[]
  recommendations Recommendation[]
  profile         UserProfile?
}

model UserProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  location        String?
  farmSize        String?
  cropsOfInterest String[]
  experienceLevel String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Input {
  id              String          @id @default(cuid())
  userId          String
  type            String
  imageUrl        String?
  description     String?
  labData         Json?
  location        String?
  crop            String?
  season          String?
  createdAt       DateTime        @default(now())
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  recommendations Recommendation?
}

model Recommendation {
  id         String                  @id @default(cuid())
  userId     String
  inputId    String                  @unique
  diagnosis  Json
  confidence Float
  modelUsed  String
  tokensUsed Int?
  createdAt  DateTime                @default(now())
  feedback   Feedback[]
  input      Input                   @relation(fields: [inputId], references: [id], onDelete: Cascade)
  user       User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sources    RecommendationSource[]
  products   ProductRecommendation[]
}

model Feedback {
  id               String         @id @default(cuid())
  recommendationId String         @unique
  recommendation   Recommendation @relation(fields: [recommendationId], references: [id], onDelete: Cascade)
  userId           String?
  user             User?          @relation(fields: [userId], references: [id], onDelete: SetNull)

  // === IMMEDIATE FEEDBACK ===

  // Quick feedback (thumbs up/down)
  helpful Boolean? // true = helpful, false = not helpful

  // Detailed ratings
  rating   Int? // Overall rating 1-5 stars
  accuracy Int? // Diagnosis accuracy 1-5 stars

  // Legacy columns (kept for backward compatibility)
  accuracyRating Int?    // @deprecated - use accuracy instead
  outcome        String? // @deprecated - use outcomeNotes instead

  // Free-text feedback
  comments String? @db.Text

  // Specific issues (stored as JSON array)
  // ["diagnosis_wrong", "not_practical", "products_unavailable", "timing_off", "missing_info"]
  issues Json?

  // === OUTCOME FEEDBACK (collected 2-4 weeks later) ===

  outcomeReported  Boolean   @default(false)
  outcomeApplied   Boolean? // Did they apply the recommendation?
  outcomeSuccess   Boolean? // Did it work? true=yes, false=no, null=partially
  outcomeNotes     String?   @db.Text
  outcomeImages    String[] // Array of image URLs (follow-up photos)
  outcomeTimestamp DateTime?

  // === METADATA FOR IMPROVEMENT ===

  // Which prompt version was used (for A/B testing)
  promptVersion String?

  // Which knowledge base chunks were used
  retrievedChunks Json? // Array of chunk IDs

  // Which products were suggested
  suggestedProducts Json? // Array of product IDs

  // System metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([recommendationId])
  @@index([userId])
  @@index([helpful])
  @@index([rating])
  @@index([outcomeReported])
  @@index([outcomeSuccess])
  @@index([promptVersion])
  @@index([createdAt])
}

model PromptTemplate {
  id           String @id @default(cuid())
  version      String @unique // "v1", "v2", "v2.1", etc.
  name         String // "Recommendation Agent v2"
  templateText String @db.Text // The actual prompt template

  // Performance metrics (updated weekly)
  averageRating Float?
  usageCount    Int    @default(0)

  // Learnings incorporated (JSON array of strings)
  learnings Json? // ["Always mention soil testing for Fe deficiency", ...]

  // A/B testing
  isActive       Boolean @default(false) // Currently in use
  trafficPercent Int     @default(0) // % of traffic (0-100)

  // Metadata
  createdAt DateTime @default(now())
  createdBy String? // "auto" or admin user ID
  notes     String?  @db.Text

  @@index([version])
  @@index([isActive])
}

model ChunkFeedbackScore {
  id      String @id @default(cuid())
  chunkId String @unique

  // Feedback aggregation
  positiveCount Int @default(0) // Used in 4-5 star recommendations
  negativeCount Int @default(0) // Used in 1-2 star recommendations
  neutralCount  Int @default(0) // Used in 3 star recommendations

  // Calculated score (0.0 - 1.0)
  feedbackScore Float @default(0.5)

  // Usage stats
  timesRetrieved Int       @default(0)
  lastUsed       DateTime?
  lastUpdated    DateTime  @updatedAt

  @@index([feedbackScore])
  @@index([timesRetrieved])
}

model ProductFeedbackScore {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Context-specific success rates
  diagnosisType String // "nitrogen_deficiency"
  cropType      String // "corn"

  // Outcome tracking
  successCount Int @default(0) // "It worked" outcomes
  failureCount Int @default(0) // "Didn't work" outcomes
  partialCount Int @default(0) // "Partially worked" outcomes

  // Calculated success rate (0.0 - 1.0)
  successRate Float @default(0.5)

  // Metadata
  lastUpdated DateTime @updatedAt

  @@unique([productId, diagnosisType, cropType])
  @@index([successRate])
  @@index([diagnosisType])
  @@index([cropType])
}

model Source {
  id           String       @id @default(cuid())
  title        String
  url          String?      @unique
  sourceType   SourceType
  institution  String?
  status       String       @default("pending")
  chunksCount  Int          @default(0)
  errorMessage String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  metadata     Json?
  imageChunks  ImageChunk[]
  textChunks   TextChunk[]
}

model TextChunk {
  id              String                 @id @default(cuid())
  sourceId        String
  content         String
  embedding       Unsupported("vector")?
  metadata        Json?
  createdAt       DateTime               @default(now())
  chunkIndex      Int                    @default(0)
  contentHash     String?                @unique
  recommendations RecommendationSource[]
  source          Source                 @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@index([sourceId])
}

model ImageChunk {
  id                    String                 @id @default(cuid())
  sourceId              String
  imageUrl              String
  caption               String?
  embedding             Unsupported("vector")?
  metadata              Json?
  createdAt             DateTime               @default(now())
  contentHash           String?                @unique
  altText               String?
  contextText           String?
  contextChunkId        String?
  source                Source                 @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  recommendationSources RecommendationSource[]

  @@unique([sourceId, imageUrl])
  @@index([sourceId])
}

model RecommendationSource {
  id               String         @id @default(cuid())
  recommendationId String
  textChunkId      String?
  imageChunkId     String?
  relevanceScore   Float?
  imageChunk       ImageChunk?    @relation(fields: [imageChunkId], references: [id])
  recommendation   Recommendation @relation(fields: [recommendationId], references: [id], onDelete: Cascade)
  textChunk        TextChunk?     @relation(fields: [textChunkId], references: [id])
}

model Product {
  id              String                  @id @default(cuid())
  name            String
  brand           String?
  type            ProductType
  analysis        Json?
  applicationRate String?
  crops           String[]
  description     String?                 @db.Text
  metadata        Json?
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt
  recommendations ProductRecommendation[]
  feedbackScores  ProductFeedbackScore[]

  @@index([type])
  @@index([name])
}

model ProductRecommendation {
  id               String         @id @default(cuid())
  recommendationId String
  recommendation   Recommendation @relation(fields: [recommendationId], references: [id], onDelete: Cascade)
  productId        String
  product          Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  reason           String         @db.Text
  applicationRate  String?
  priority         Int            @default(1)
  searchQuery      String?
  searchTimestamp  DateTime       @default(now())
  createdAt        DateTime       @default(now())

  @@unique([recommendationId, productId])
  @@index([recommendationId])
  @@index([productId])
}

enum ProductType {
  FERTILIZER
  AMENDMENT
  PESTICIDE
  HERBICIDE
  FUNGICIDE
  INSECTICIDE
  SEED_TREATMENT
  BIOLOGICAL
  OTHER
}

enum SourceType {
  UNIVERSITY_EXTENSION
  MANUFACTURER
  RETAILER
  RESEARCH_PAPER
  GOVERNMENT
}
