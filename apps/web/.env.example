# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Database
DATABASE_URL=
DIRECT_URL=

# Cloudflare R2 Storage
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=

# Anthropic API (Claude)
ANTHROPIC_API_KEY=

# OpenAI API (Embeddings)
OPENAI_API_KEY=

# Replicate API (CLIP for image embeddings)
REPLICATE_API_TOKEN=

# Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Application Settings
NODE_ENV=development

# API Configuration
API_VERSION=v1

# AWS API Gateway â€” direct Lambda URL used by api-client.ts
API_GATEWAY_URL=
NEXT_PUBLIC_API_GATEWAY_URL=

# AWS API Cutover Controls (for /api/v1/* canary migration)
# AWS_API_CUTOVER_MODE: legacy | canary | aws
AWS_API_BASE_URL=
AWS_API_CUTOVER_MODE=legacy
AWS_API_CUTOVER_PERCENT=10
AWS_API_PROXY_TIMEOUT_MS=15000
# Optional: path-scoped cutover list (comma-separated prefixes)
AWS_API_CUTOVER_PATHS=/api/v1/health,/api/v1/upload,/api/v1/inputs,/api/v1/jobs,/api/v1/sync/pull,/api/v1/profile,/api/v1/recommendations,/api/v1/products
# Optional: allow cookie-auth web traffic to proxy
AWS_API_PROXY_INCLUDE_COOKIE_TRAFFIC=true
